extends ../layout.jade

block title
    title 博客 - I'm Mofei

block css
    link(rel="stylesheet" href="/css/blog.css")

block javascript

block content    
    section.global-nav-text
        div.global-nav-text-logo I'm Mofei
        div.global-nav-text-link
            ul
                li
                    a.active(href="/") 首页
                    a(href="/blog") 博客
                    a(href="/lab") 实验室
                    a(href="/links") 小伙伴
                    a(href="/rss") RSS
    section.blog-content
        div.blog-content-area
            each blog in blogs
                div.blog-content-block
                    if (blog.cover)
                        div.blog-content-img
                            a(href="/blog/" + blog._id)
                                div.blog-content-img-body(style="background-image:url('" + blog.cover +"')")
                    div.blog-content-text
                        a(href="/blog/" + blog._id)
                            h2= blog.title
                        div.blog-tag &#xe901; 
                            - var tags = blog.classid.split(',');
                                each tag in tags
                                    a(href="#")= tag
                        a(href="/blog/" + blog._id)
                            div.blog-review= blog.content.replace(/(\!{0,1}\[.+?\]\(.+?\))|#|(`+?)|\*|=|-/g,' ').slice(0,150)+ ' ...'
                        div.blog-info
                            div.blog-time 
                                span &#xe904; 
                                - var time = new Date(blog.pubtime);
                                - var year = time.getFullYear();
                                - var month = (time.getMonth()+1);
                                - var date = time.getDate();
                                    span= year + '-' + (month < 10 ? '0' + month : month) + '-' + (date < 10 ? '0' + date : date)
                            div.blog-read
                                span &#xe900; 
                                span= blog.visited + ' '
                                span &#xe903; 
                                span= (blog.like||0) + ' '
                                span &#xe902;  
                                span= blog.comment 
    section.index-copyright
        div.index-copyright-bottom
            div.index-copyright-bottom-txt (C) 2016 by 
                a(href="http://www.zhuwenlong.com") Mofei 

